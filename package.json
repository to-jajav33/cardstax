{
  "name": "cardstax",
  "version": "0.0.0",
  "description": "Making stacks of cards simpler.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "git:commit": "npx git-cz",
    "publish:alpha": "npx lerna publish --canary --preid alpha",

    "precommit": "npx lerna run test",
    "commitmsg": "npx commitlint -E HUSKY_GIT_PARAMS",
    "prepush": "npx lerna run test"
  },
  "author": "Jajav33 <to.jajav33@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "chai": "^4.2.0",
    "commitizen": "^4.0.3",
    "cz-lerna-changelog": "^2.0.2",
    "husky": "^3.0.4",
    "lerna": "^3.16.4",
    "mocha": "^6.2.0",
    "verdaccio": "^4.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/to-jajav33/cardstax.git"
  },
  "keywords": [
    "CardStax"
  ],
  "bugs": {
    "url": "https://github.com/to-jajav33/cardstax/issues"
  },
  "homepage": "https://github.com/to-jajav33/cardstax#readme",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "private": true,
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lerna run test",
      "commit-msg": "echo commiting i think",
      "pre-push": "npx lerna run test"
    }
  }
}
